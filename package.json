  "bugs": {
    "url": "https://github.com/codedread/kthoom/issues"
  },
  "homepage": "https://github.com/codedread/kthoom#readme",
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0"
  },
  "scripts": {
