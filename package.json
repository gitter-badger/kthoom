    "comic books",
    "javascript",
    "books",
    "unzip",
    "ebook",
    "comics",
    "epub",
    "comic reader",
    "cbr",
    "ebook reader",
    "ebooks",
    "epub reader",
    "unrar",
    "cbz",
    "cbt"
  ],
  "author": "Jeff Schiller",
